<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="matthewallenlinsoftware.cs_m117_assassins.lobby_page"
    tools:showIn="@layout/activity_lobby_page">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/background"
        android:layout_alignParentTop="true"
        android:src="@drawable/bg_image"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/skull_icon"
        android:layout_gravity="right"
        android:src="@drawable/skull_icon"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome to the Lobby"
            android:id="@+id/lobby_page_title"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3 of 6 people have joined"
            android:id="@+id/lobby_page_user_number"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Placeholder"
            android:id="@+id/lobby_user_1"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/border"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:layout_marginBottom="-3dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Placeholder"
            android:id="@+id/lobby_user_2"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/border"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:layout_marginBottom="-3dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Placeholder"
            android:id="@+id/lobby_user_3"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/border"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:layout_marginBottom="-3dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Placeholder"
            android:id="@+id/lobby_user_4"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/border"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:layout_marginBottom="-3dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Placeholder"
            android:id="@+id/lobby_user_5"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/border"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:layout_marginBottom="-3dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Placeholder"
            android:id="@+id/lobby_user_6"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/border"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:layout_marginBottom="15dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Start Game"
            android:id="@+id/start_game_button"
            android:layout_below="@+id/editText7"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"
            android:background="@drawable/button_filled"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            />
    </LinearLayout>

</RelativeLayout>
